# Server Configuration
PORT=3000

# OpenAI Configuration (for Whisper STT and GPT-4 Reframing)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Configuration (alternative to OpenAI for reframing)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ElevenLabs Configuration (for Voice Cloning TTS)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=your_elevenlabs_voice_id_here

# Google Cloud Configuration (alternative to OpenAI Whisper)
GOOGLE_CLOUD_PROJECT_ID=your_google_cloud_project_id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# Storage Configuration
UPLOAD_DIR=./uploads
GENERATED_AUDIO_DIR=./uploads/generated

# AI Service Selection
USE_ANTHROPIC_FOR_REFRAMING=false
USE_GOOGLE_STT=false
